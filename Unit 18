// 18.1 else 사용하기
#include <stdio.h>

int main()
{
    int num1 = 5;

    if (num1 == 10)
    {
        printf("10입니다.\n");
    }
    else
    {
        printf("10이 아닙니다.\n");
    }
    // 출력값: 10이 아닙니다.
    // 참: if 거짓: else

    return 0;
}

// 18.2 else와 세미콜론
#include <stdio.h>

int main()
{
    int num1 = 10;

    if (num1 == 10)
    {
        printf("10입니다.\n");
    }
    else;    // if와 마찬가지로 세미콜론을 붙이면 안됨
    {
        printf("10이 아닙니다.\n");
    }
    // 출력값: 10입니다.
              10이 아닙니다.

    return 0;
}

// 18.3 else에서 중괄호 생략하기 //
// if와 마찬가지로 코드가 한 줄이면 중괄호 생략, 두 줄 이상이면 무조건 중괄호로 묶어줘야 함

// 18.4 if 조건문의 동작 방식 알아보기 //
// if가 0이 아닐 때
#include <stdio.h>

int main()
{
    if (-4)
        printf("참\n");
    else
        printf("거짓\n");
// 출력값: 참

    return 0;
}

// if가 0일 때
#include <stdio.h>

int main()
{
    if (0)
        printf("참\n");
    else
        printf("거짓\n");
// 출력값: 거

    return 0;
}

// 할당 연산자를 사용하는 실수!! (주의)
#include <stdio.h>

int main()
{
    int num1 = 5;

    if (num1 = 10)
        printf("10입니다.\n");
// 출력값: 10입니다.

    return 0;
}

// 18.5 조건식을 여러 개 지정하기 //
#include <stdio.h>

int main()
{
    int num1 = 10;
    int num2 = 20;

    if (num1 == 10 && num2 == 20)    // 할당 연산자를 사용하여 num1이 10이면서 num2가 20일 때 (&&는 논리 연산자)
        printf("참\n");
    else
        printf("거짓\n");

    return 0;
}

// 심사문제
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
    char c1;

    scanf("%c\n", &c1);

    if (c1 == 'a')
    {
        printf("a입니다.\n");
    }
    else
    {
        printf("a가 아닙니다.\n");
    }

    return 0;
}
