// 18.1 else 사용하기
#include <stdio.h>

int main()
{
    int num1 = 5;

    if (num1 == 10)
    {
        printf("10입니다.\n");
    }
    else
    {
        printf("10이 아닙니다.\n");
    }
    // 출력값: 10이 아닙니다.
    // 참: if 거짓: else

    return 0;
}

// 18.2 else와 세미콜론
#include <stdio.h>

int main()
{
    int num1 = 10;

    if (num1 == 10)
    {
        printf("10입니다.\n");
    }
    else;    // if와 마찬가지로 세미콜론을 붙이면 안됨
    {
        printf("10이 아닙니다.\n");
    }
    // 출력값: 10입니다.
              10이 아닙니다.

    return 0;
}

// 18.3 else에서 중괄호 생략하기 //
// if와 마찬가지로 코드가 한 줄이면 중괄호 생략, 두 줄 이상이면 무조건 중괄호로 묶어줘야 함

// 18.4 if 조건문의 동작 방식 알아보기 //
