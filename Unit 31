// 31.1 중첩 루프 사용하기 //
#include <stdio.h>

int main()
{
    for (int i = 0; i < 5; i++)    // 5번 반복, 바깥쪽 루프는 세로 방향
    {
        for (int j = 0; j < 5; j++)    // 5번 반복, 안쪽 루프는 가로 방향
        {
            printf("j:%d ", j);
        }
        printf("i:%d\\n", i);    // i값 출력, 개행 문자 모양도 출력
        printf("\n");            // 가로 방향으로 숫자 출력, 다음 줄로 넘어감
    }

    return 0;
}

// 31.2 사각형으로 별 출력하기 //
// 기본
#include <stdio.h>

int main()
{
    for (int i = 0; i < 5; i++)
    {
        for (int j = 0; j < 5; j++)
        {
            printf("*");       // 별 출력
        }
        printf("\n");      // 가로 방향으로 별을 다 그린 뒤 다음 줄로 넘어감
    }

    return 0;
}

// 사각형 모양 변환
#include <stdio.h>

int main()
{
    for (int i = 0; i < 3; i++)
    {
        for (int j = 0; j < 7; j++)
        {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}

// 31.3 계단식으로 별 출력하기 //
#include <stdio.h>

int main()
{
    for (int i = 0; i < 5; i++)
    {
        for (int j = 0; j < 5; j++)
        {
            if (j <= i)    // 별 출력을 제어하기 위한 조건문
                printf("*");
        }
        printf("\n");
    }

    return 0;
}

// 31.4 대각선으로 별 출력하기 //
#include <stdio.h>

int main()
{
    for (int i = 0; i < 5; i++)
    {
        for (int j = 0; j < 5; j++)
        {
            if (j == i)         // 세로 방향 변수와 같을 때만 별 출력
                printf("*");
            else
                printf(" ");    // 별을 출력하지 않는 곳은 공백
        }
        printf("\n");
    }

    return 0;
}

// 심사문제
