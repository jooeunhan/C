// 12.1 덧셈, 뺄셈하기 //

// 정수 덧셈, 뺄셈
#include <stdio.h>

int main()
{
    int num1;
    int num2;

    num1 = 1 + 2;
    num2 = 1 - 2;

    printf("%d\n", num1);
    printf("%d\n", num2);

    return 0;
}

// 실수 덧셈, 뺄셈
#include <stdio.h>

int main()
{
    float num1;
    float num2;

    num1 = 1.0f + 0.456789f;
    num2 = 1.0f - 0.456789f;

    printf("%f\n", num1);
    printf("%f\n", num2);

    return 0;
}

// 12.2 변수 하나에서 값을 더하거나 빼기 //

#include <stdio.h>

int main()
{
    int num1 = 1;
    int num2 = 1;

    num1 = num1 + 2;    // num1에 2와 연산한 후 저장, num1에 할당
    num2 = num2 - 2;    // num2에 2와 연산한 후 저장, num2에 할당

    printf("%d\n", num1);
    printf("%d\n", num2);

    return 0;
}

// 축약형
#include <stdio.h>

int main()
{
    int num1 = 1;
    int num2 = 1;

    num1 += 2;    // num1 = num1 + 2;
    num2 -= 2;    // num2 = num2 - 2;

    printf("%d\n", num1);
    printf("%d\n", num2);

    return 0;
}

// 12.5 심사 문제 //
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
    float num1;
    float num2;
    float num3;

    scanf("%f %f", &num1, &num2);

    num3 = num1 + num2 - 4.5f;

    printf("%f\n", num3);

    return 0;
}

// 축약형
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
    float num1;
    float num2;
    float num3;

    scanf("%f %f", &num1, &num2);

    num3 = num1 + num2;
    num3 -= 4.5f;

    printf("%f\n", num3);

    return 0;
}
