#include <iostream>
#include <string>
using namespace std;

int main() {
	cout << "2021107050 한주은" << endl;

	string s;
	cout << "3+23-47+5와 같이 연산 문자열을 입력하세요." << endl;
	getline(cin, s, '\n');
	int calculate = 0;
	int startIndex = 0;
	while (true) {
		int fpIndex = s.find('+', startIndex);
		int fmIndex = s.find('-', startIndex);
		if (fpIndex == -1) {
			string part = s.substr(startIndex);
			if (part == "") break;
		}
	}
}
